<%-- Variables --%>
<%--@elvariable id="properties" type="com.marcelmika.limsmuc.portal.domain.Properties"--%>

<%-- Defaults --%>
<c:set var="checked" value=""/>

<%-- Decide if the swtich should be checked --%>
<c:if test="${properties.jabberEnabled}">
    <c:set var="checked" value="checked"/>
</c:if>

<%-- Render --%>
<li class="jabber-enabled">

    <div class="note">
        <liferay-ui:message key="panel-settings-admin-area-jabber-note"/>
    </div>

    <label class="switch">
        <input ${checked} type="checkbox"/>
        <span></span>
    </label>
    <span class="title-text">
        <liferay-ui:message key="panel-settings-admin-area-jabber-enabled-title"/>
        <i class="tooltip-button"
           data-text="<liferay-ui:message key="panel-settings-admin-area-jabber-enabled-help"/>">i</i>
    </span>
</li>