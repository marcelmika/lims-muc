<div class="synchronization-chat-portlet">

    <div class="note">
        <liferay-ui:message key="panel-settings-admin-area-synchronization-chat-portlet-note"/>
    </div>

    <div class="confirm">
        <button class="open button button-secondary">
            <liferay-ui:message key="panel-settings-admin-area-synchronization-chat-portlet-open-title"/>
        </button>
        <div class="confirm-decision">
            <div class="note">
                <liferay-ui:message key="panel-settings-admin-area-synchronization-chat-portlet-default-note"/>
            </div>
            <button class="cancel button button-secondary">
                <liferay-ui:message key="panel-settings-admin-area-synchronization-chat-portlet-cancel-title"/>
            </button>
            <button class="ok button button-secondary">
                <liferay-ui:message key="panel-settings-admin-area-synchronization-chat-portlet-ok-title"/>
            </button>
            <div class="preloader"></div>
        </div>
    </div>

</div>